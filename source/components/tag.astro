---
import { twMerge } from "tailwind-merge";

interface Props {
	class?: string;
	stacked?: true;
}

const { class: className, stacked = false } = Astro.props;
---

<span
  class={twMerge(
    "rounded-sm border border-neutral-400 bg-neutral-200 px-2 py-1 font-mono text-xs font-thin",
    !stacked && 'bg-neutral-100',
    className,
  )}
>
  <slot />
</span>
