---
import { twMerge } from "tailwind-merge";
import type { TypographyProps } from "./_props";

interface Props extends TypographyProps {}

const { element, class: className, id } = Astro.props;

const Element = element ?? "small";
---

<Element class={twMerge("text-base tracking-base", className)} id={id}
  ><slot /></Element
>
