---
import { twMerge } from "tailwind-merge";
import type { TypographyProps } from "./_props.ts";

interface Props extends TypographyProps {}

const { element, class: className, id } = Astro.props;

const Element = element ?? "h3";
---

<Element class={twMerge("text-neutral-800", className)} id={id}>
  <slot />
</Element>
